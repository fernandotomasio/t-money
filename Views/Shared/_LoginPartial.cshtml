@using Microsoft.AspNetCore.Identity
@using t_money.Areas.Identity.Data

@inject SignInManager<AppIdentityUser> SignInManager
@inject UserManager<AppIdentityUser> UserManager


<div class="user d-inline-block">
    <button class="btn btn-empty p-0" type="button" data-toggle="dropdown" aria-haspopup="true"
            aria-expanded="false">
        <span class="name">@UserManager.GetUserName(User)</span>
    </button>

    <div class="dropdown-menu dropdown-menu-right mt-3">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" class="dropdown-item">Logout</button>
        </form>
    </div>
</div>