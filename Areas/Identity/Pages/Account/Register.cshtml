@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>


<div class="card auth-card">
    <div class="position-relative image-side ">
        <p class=" text-white h2">MAGIC IS IN THE DETAILS</p>
        <p class="white mb-0">
            Please use this form to register.
            <br>If you are a member, please
            <a asp-controller="Home" asp-action="Index" class="white">login</a>.
        </p>
        <h4>Use another service to register.</h4>
        <hr />
        @{
            if ((Model.ExternalLogins?.Count ?? 0) == 0)
            {
                <div>
                    <p>
                        There are no external authentication services configured. See <a href="https://go.microsoft.com/fwlink/?LinkID=532715">this article</a>
                        for details on setting up this ASP.NET application to support logging in via external services.
                    </p>
                </div>
            }
            else
            {
                <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                    <div>
                        <p>
                            @foreach (var provider in Model.ExternalLogins)
                            {
                                <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                            }
                        </p>
                    </div>
                </form>
            }
        }
    </div>
    <div class="form-side">
        <a href="Dashboard.Default.html">
            <span class="logo-single"></span>
        </a>
        <h6 class="mb-4">Register</h6>

        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>

            <label asp-for="Input.Email" class="form-group has-float-label mb-4">
                <input  asp-for="Input.Email" class="form-control" />
                <span>Email</span>
            </label>
            <label asp-for="Input.Password" class="form-group has-float-label mb-4">
                <input asp-for="Input.Password"  type="password" class="form-control" />
                <span>Password</span>
            </label>
            <label asp-for="Input.ConfirmPassword" class="form-group has-float-label mb-4">
                <input asp-for="Input.ConfirmPassword" class="form-control" type="password" />
                <span>Confirm password</span>
            </label>
            <div class="d-flex justify-content-end align-items-center">
                <button class="btn btn-primary btn-lg btn-shadow" type="submit">REGISTER</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
